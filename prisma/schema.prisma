generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Accounts {
  id               String   @id
  name             String?
  balance          Float
  iban             String?
  institution_name String?
  institution_id   String?
  institution_logo String?
  requisitionId    String?
  last_synced      DateTime

  // Remove ?
  institutions Institutions?  @relation(fields: [institution_id], references: [id], onDelete: Restrict, onUpdate: Restrict)
  users        Users[]
  Transactions Transactions[]
}

model Transactions {
  weight       Int      @id @default(autoincrement())
  id           String   @unique
  account_id   String
  amount       Float
  total_amount Float
  title        String
  category     String
  date         DateTime
  account      Accounts @relation(fields: [account_id], references: [id], onDelete: Cascade, onUpdate: Restrict)
}

model Sessions {
  session_token String   @unique
  user_id       Int
  expires_at    DateTime
  ip_address    String
  ip_location   String

  users Users @relation(fields: [user_id], references: [id])
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  tokens   Sessions[]
  accounts Accounts[]
}

model Institutions {
  id   String  @id
  name String?
  logo String?

  accounts Accounts[]
}
